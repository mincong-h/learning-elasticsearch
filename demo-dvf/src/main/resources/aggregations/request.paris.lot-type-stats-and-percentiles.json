{
  "query": {
    "bool": {
      "must": [
        {
          "wildcard": {
            "postal_code": {
              "value": "75*"
            }
          }
        }
      ],
      "filter": [
        {
          "match": {
            "mutation_nature": {
              "query": "Vente"
            }
          }
        },
        {
          "match": {
            "local_type": {
              "query": "Appartement"
            }
          }
        },
        {
          "range": {
            "property_value": {
              "gt": 0
            }
          }
        },
        {
          "range": {
            "real_built_up_area": {
              "gt": 0
            }
          }
        }
      ]
    }
  },
  "runtime_mappings": {
    "price_m2": {
      "type": "double",
      "script": "emit(doc['property_value'].value / doc['real_built_up_area'].value)"
    },
    "lot_type": {
      "type": "keyword",
      "script": "if (doc['lots_count'].value < 5) { emit('T' + doc['lots_count'].value) } else { emit('Others') }"
    }
  },
  "size": 0,
  "aggs": {
    "lots-aggregation": {
      "terms": {
        "field": "lot_type"
      },
      "aggs": {
        "price_m2/percentiles": {
          "percentiles": {
            "field": "price_m2"
          }
        },
        "property_value/stats": {
          "stats": {
            "field": "property_value"
          }
        }
      }
    }
  }
}